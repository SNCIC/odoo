<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- template for color picker  -->
    <t t-name="ylhc_setting.color_picker">
        <div class="style-item-ver input-group style_color_item mr-3">
            <input type="text" class="form-control style_item_var" t-model="state.color_value" t-ref="color_value_input" />
            <span class="input-group-append">
                <span class="input-group-text colorpicker-input-addon">
                    <input t-ref="color_picker_input" />
                </span>
            </span>
        </div>
    </t>

</templates>
