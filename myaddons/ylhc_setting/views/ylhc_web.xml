<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="ylhc_setting.bootstrap" inherit_id="web.webclient_bootstrap">

        <xpath expr="//t[@t-set='head_web']" position="after">
            <style id="mode_style_id" />
            <style id="style_id" />
            <style id="preview_mode_style_id" />
            <style id="preview_style_id" />
        </xpath>

        <!-- add the style id -->
        <xpath expr="//link[@rel='apple-touch-icon']" position="before">
            <script type="text/javascript">
                odoo.__theme_setting__ = <t t-out="json.dumps(request.env['ylhc_setting.setting_manager'].sudo().get_user_setting())"/>
            </script>
        </xpath>

    </template>

</odoo>