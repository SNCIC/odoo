
<odoo>
    <data>

        <record model="ir.ui.view" id="ylhc_setting.style_item_group_list">
            <field name="name">Style Item Group</field>
            <field name="model">ylhc_setting.style_item_group</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="ylhc_setting.style_item_group_form">
            <field name="name">Style Item Group</field>
            <field name="model">ylhc_setting.style_item_group</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row d-none">
                        <label class="col-sm-2 col-form-label" for="theme_style">theme_style</label>
                        <div class="col-sm-10">
                            <field name="theme_style" force_save="1" invisible="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-10">
                            <field name="name" required="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="sequence">sequence</label>
                        <div class="col-sm-10">
                            <field name="sequence"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="ylhc_setting.style_item_group_act_window">
            <field name="name">Style Item Group</field>
            <field name="res_model">ylhc_setting.style_item_group</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    