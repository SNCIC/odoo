
<odoo>
    <data>
        
        <record model="ir.ui.view" id="ylhc_setting.image_wizard_form">
            <field name="name">ylhc_setting.image_wizard</field>
            <field name="model">ylhc_setting.image_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <div class="form-group row">
                            <label for="data" class="col-sm-2 col-form-label">data</label>
                            <div class="col-sm-10">
                                <field name="data" string="data"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="opacity" class="col-sm-2 col-form-label">opacity</label>
                            <div class="col-sm-10">
                                <field name="opacity" string="opacity"/>
                            </div>
                        </div>
                        
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="ylhc_setting.image_wizard_act_window">
            <field name="name">ylhc_setting.image_wizard</field>
            <field name="res_model">ylhc_setting.image_wizard</field>
            <field name="view_mode">tree,form</field>
        </record>
              
    </data>
</odoo>