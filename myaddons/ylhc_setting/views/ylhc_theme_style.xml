
<odoo>
    <data>
        
        <record model="ir.ui.view"
                id="ylhc_setting.theme_style_list">
            <field name="name">theme style</field>
            <field name="model">ylhc_setting.theme_style</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view"
                id="ylhc_setting.theme_style_edit_form">
            <field name="name">theme style form </field>
            <field name="model">ylhc_setting.theme_style</field>
            <field name="arch" type="xml">
                <form>
                    <div class="container" style="padding:10px">
                        <div class="form-group row">
                            <label class="col-sm-2" for="name">name</label>
                            <div class="col-sm-10">
                                <field name="name"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2" for="sequence">sequence</label>
                            <div class="col-sm-10">
                                <field name="sequence"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2" for="background_image">background_image</label>
                            <div class="col-sm-10">
                                <field name="background_image"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2" for="opacity">opacity</label>
                            <div class="col-sm-10">
                                <field name="opacity"/>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view"
                id="ylhc_setting.theme_style_form">
            <field name="name">theme style form </field>
            <field name="model">ylhc_setting.theme_style</field>
            <field name="arch" type="xml">
                <form>

                    <div class="container" style="padding:10px">
                        <div class="form-group row">
                            <label class="col-sm-2" for="name">name</label>
                            <div class="col-sm-10">
                                <field name="name"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2" for="sequence">sequence</label>
                            <div class="col-sm-10">
                                <field name="sequence"/>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="ylhc_setting.theme_style_act_window">
            <field name="name">theme_style</field>
            <field name="res_model">ylhc_setting.theme_style</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_theme_mode': True, 'pop_up_form': True}</field>
        </record>

    </data>
</odoo>
    