<odoo>
    <data>

        <record model="ir.ui.view" id="ylhc_setting.style_item_form">
            <field name="name">theme style item</field>
            <field name="model">ylhc_setting.style_item</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="sub_group">sub_group</label>
                        <div class="col-sm-10">
                            <field name="sub_group" readonly="1" force_save="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-10">
                            <field name="name" required="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="type">type</label>
                        <div class="col-sm-10">
                            <field name="type"/>
                        </div>
                    </div>

                    <div class="form-group row" invisible="type != 'normal'">
                        <label class="col-sm-2 col-form-label" for="login_style">login_style</label>
                        <div class="col-sm-10">
                            <field name="login_style"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="selectors">selectors</label>
                        <div class="col-sm-10">
                            <field name="selectors"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="sequence">sequence</label>
                        <div class="col-sm-10">
                            <field name="sequence"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="val_template">val_template</label>
                        <div class="col-sm-10">
                            <field name="val_template" required="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="val">val</label>
                        <div class="col-sm-10">
                            <field name="val"/>
                        </div>
                    </div>

                    <notebook>
                        <page string="vars">
                            <field name="vars" required="1">
                                <tree editable="top" js_class="awesome_style_item_var_list">
                                    <field name="name" label="var name" required="1" />
                                    <field name="type" required="1" />
                                    <field name="color" invisible="type != 'color'" />
                                    <field name="disable_opacity" invisible="type != 'color'" />
                                    <field name="image" invisible="type != 'image'"/>
                                    <field name="image_url" invisible="type != 'image_url'"/>
                                    <field name="svg" invisible="type != 'svg'"/>
                                    <button name="reset_var" string="Reset" type="object" icon="fa-refresh"
                                            invisible="type != 'color'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="ylhc_setting.style_item_act_window">
            <field name="name">theme style item</field>
            <field name="res_model">ylhc_setting.style_item</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="ylhc_setting.theme_mode_editor_action" model="ir.actions.client">
            <field name="name">theme style config</field>
            <field name="tag">theme_mode_editor</field>
            <field name="target">main</field>
        </record>

    </data>
</odoo>
